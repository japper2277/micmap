<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.micmap.gtfs-update</string>

    <key>ProgramArguments</key>
    <array>
        <string>/Users/jaredapper/Desktop/micmap/scripts/update-gtfs.sh</string>
    </array>

    <!-- Run every Sunday at 3 AM -->
    <key>StartCalendarInterval</key>
    <dict>
        <key>Weekday</key>
        <integer>0</integer>
        <key>Hour</key>
        <integer>3</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <key>StandardOutPath</key>
    <string>/Users/jaredapper/Desktop/micmap/logs/gtfs-update.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/jaredapper/Desktop/micmap/logs/gtfs-update-error.log</string>

    <key>RunAtLoad</key>
    <false/>
</dict>
